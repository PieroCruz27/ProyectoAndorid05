<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="15sp"
    tools:context=".vista.crud.EditorialCrudListaActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:padding="10dp"
        android:text="@string/txt_crud_de_editorial"
        android:textAlignment="center"
        android:textSize="18sp"
        android:textStyle="bold" />
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Listar"
        android:padding="10dp"
        android:id="@+id/idCrudEditorialLista"
        />
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Registrar"
        android:padding="10dp"
        android:id="@+id/idCrudEditorialRegistra"
        />

    <ListView
        android:id="@+id/idCrudEditorialListView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="10dp"

        />



</androidx.appcompat.widget.LinearLayoutCompat>